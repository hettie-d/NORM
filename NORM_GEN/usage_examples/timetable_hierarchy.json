 {
     "type": "array",
     "items": {
         "$ref": "#/definitions/flight"
     },
     "title": "timetable_hierarchy",
     "description": "all timetable details",
     "db_mapping": {
         "db_schema": "postgres_air"
     },
     "definitions": {
         "flight": {
             "type": "object",
             "db_mapping": {
                 "pk_col": "flight_id",
                 "db_table": "flight",
                 "embedded": [
                     {
                         "alias": "departure",
                         "fk_col": "departure_airport",
                         "pk_col": "airport_code",
                         "db_table": "airport"
                     },
                     {
                         "alias": "arrival",
                         "fk_col": "arrival_airport",
                         "pk_col": "airport_code",
                         "db_table": "airport"
                     }
                 ],
                 "record_type": "flight_tt_record"
             },
             "properties": {
                 "flight_id": {
                     "type": "number"
                 },
                 "flight_no": {
                     "type": "text"
                 },
                 "departure_city": {
                     "type": "text",
                     "db_mapping": {
                         "db_col": "city",
                         "db_source_alias": "departure"
                     }
                 },
                 "departure_airport_code": {
                     "type": "text",
                     "db_mapping": {
                         "db_col": "departure_airport"
                     }
                 },
                 "departure_airport_name": {
                     "type": "string",
                     "db_mapping": {
                         "db_col": "airport_name",
                         "db_source_alias": "departure"
                     }
                 },
                 "scheduled_departure": {
                     "type": "text",
                     "db_mapping": {
                         "db_type": "timestamptz"
                     }
                 },
                 "departure_date": {
                     "type": "text",
                     "db_mapping": {
                         "db_type": "text",
                         "db_expression":"Y",
                         "db_col":"to_char(scheduled_departure at time zone departure.airport_tz, 'YYYY-MM-DD')"
                     }
                 },
                 "departure_time": {
                     "type": "text",
                     "db_mapping": {
                         "db_type": "text",
                         "db_expression":"Y",
                         "db_col":"to_char(scheduled_departure at time zone departure.airport_tz, 'HH24:MI')"
                     }
                 },
                 "arrival_city": {
                     "type": "text",
                     "db_mapping": {
                         "db_col": "city",
                         "db_source_alias": "arrival"
                     }
                 },
                 "arrival_airport_code": {
                     "type": "text",
                     "db_mapping": {
                         "db_col": "arrival_airport"
                     }
                 },
                 "arrival_airport_name": {
                     "type": "text",
                     "db_mapping": {
                         "db_col": "airport_name",
                         "db_source_alias": "arrival"
                     }
                 },
                 "scheduled_arrival": {
                     "type": "text",
                     "db_mapping": {
                         "db_type": "timestamptz"
                     }
                 },
                 "arrival_date": {
                     "type": "text",
                     "db_mapping": {
                         "db_type": "text",
                         "db_expression":"Y",
                         "db_col":"to_char(scheduled_arrival at time zone arrival.airport_tz, 'YYYY-MM-DD')"
                     }
                 },
                 "arrival_time": {
                     "type": "text",
                     "db_mapping": {
                         "db_type": "text",
                         "db_expression":"Y",
                         "db_col":"to_char(scheduled_arrival at time zone arrival.airport_tz, 'HH24:MI')"
                     }
                 },
                 "aircraft": {
                     "type": "object",
                     "items": {
                         "$ref": "#/definitions/aircraft"
                     },
                     "db_mapping": {
                         "fk_col": "code",
                         "db_col":"aircraft_code"
                     }
                 }
             }
         },
         "aircraft": {
             "type": "object",
             "db_mapping": {
                 "pk_col": "code",
                 "db_table": "aircraft",
                 "record_type": "aircraft_tt_record"
             },
             "properties": {
                 "code": {
                     "type": "text"
                 },
                 "model": {
                     "type": "text"
                 },
                 "class": {
                     "type": "number"
                 }
             }
         }
     }
 }
